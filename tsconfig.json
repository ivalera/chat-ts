{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "ES6", "DOM"
    ],      
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./build",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,              
    "forceConsistentCasingInFileNames": true,    
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "skipLibCheck": true 
  },
  "include": ["src/**/*", "src/module/script.ts"],
  "exclude": ["node_modules"],
  "lib": ["ESNext"],
  "ts-node": {
    "esm": true
  }
}
